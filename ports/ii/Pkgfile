# Description: Irc it, simple FIFO based IRC client. (git checkout)
# URL:         http://tools.suckless.org/ii/
# Packager:    wildefyr, me at wildefyr dot net
# Depends on:  git openssl

name=ii
version=git
release=1
source=(ssl.diff \
		)
branch=master

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/$branch
	else
		git clone git://git.suckless.org/ii -b $branch $name
		cd $name
	fi

	git apply "$SRC/ssl.diff"

	make
	make DESTDIR=$PKG PREFIX=/usr MANDIR=/usr/share/man install
}
