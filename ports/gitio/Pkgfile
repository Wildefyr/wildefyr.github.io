# Description: Create short vanity github URL's. (git checkout)
# URL:         https://github.com/syntax-samurai/gitio
# Maintainer:  wildefyr, me at wildefyr dot net
# Depends on:  git

name=gitio
version=git
release=1
source=()
branch=master

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/$branch
	else
		git clone https://github.com/syntax-samurai/gitio -b $branch $name
		cd $name
	fi

	install -Dm 755 gitio $PKG/usr/bin/gitio
}
