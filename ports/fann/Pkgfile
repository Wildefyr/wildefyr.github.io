# Description: Fast Ariticial Neural Network Library. (git checkout)
# URL:         https://github.com/libfann/fann
# Packager:    wildefyr, me at wildefyr dot net
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  

name=fann
version=git
release=1
source=(
		Added-const.patch
		Added-type-conversion-and-const.patch
)
branch=master

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/$branch
	else
		git clone https://github.com/libfann/fann -b $branch $name
		cd $name
	fi

	git apply $SRC/Added-const.patch
	git apply $SRC/Added-type-conversion-and-const.patch

	cmake .
	make
	make DESTDIR=$PKG install
}
