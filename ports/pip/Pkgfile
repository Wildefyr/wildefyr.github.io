# Depends on:  python requests setuptools

name=pip
version=8.1.1
release=1
source=(http://pypi.python.org/packages/source/p/$name/$name-$version.tar.gz)

build() {
    cd $name-$version

	/usr/bin/python3 setup.py build
	/usr/bin/python3 setup.py install \
		--prefix=/usr \
		--root=$PKG
}
