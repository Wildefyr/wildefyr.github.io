# Description: Use vim as a pager. (git checkout)
# URL:         https://github.com/rkitover/vimpager
# Maintainer:  wildefyr, me at wildefyr dot net
# Depends on:  git

name=vimpager
version=git
release=1
source=()
branch=master

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/$branch
	else
		git clone https://github.com/rkitover/vimpager -b $branch $name
		cd $name
	fi

	install -Dm 755 vimcat $PKG/usr/bin/vimcat
	install -Dm 755 vimpager $PKG/usr/bin/vimpager
}
